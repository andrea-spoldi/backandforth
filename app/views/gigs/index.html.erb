<h2>Prossimi Live 2012 - 2013</h2>

<table class="table table-hover">
  <thead>
    <th>Data</th>
    <th>Luogo</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>
  </tr>
<tbody>
<% @forthcoming_gigs = Gig.where('data >= ?', Date.today).order(:data) %>
<% @forthcoming_gigs.each do |gig| %>
  <tr>
    <td><%= gig.data %></td>
    <td><%= gig.luogo %></td>
    <td><%= gig.note %></td>
  </tr>
<% end %>
</tbody>
</table>

